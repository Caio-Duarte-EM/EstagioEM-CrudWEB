@model ProjetoCrudWEB.Models.AlunoViewModel

@{
    ViewData["Title"] = "Tabela de Alunos";
}

<div class="mt-5 pt-5">
    <h1 class="pt-5" style="display: inline">
        Tabela de Alunos
    </h1>
    <a class="float-end btn btn-success" asp-action="Adicionar">Adicionar Aluno</a>
    <hr />

    <form asp-controller="Aluno" asp-action="Index" method="get" class="input-group">
        <input class="form-control" type="text" placeholder="Matrícula ou nome do aluno..." asp-for="StringPesquisa" />
        <input type="submit" value="&#x1F50E Buscar" class=" btn btn-success" />
    </form>
    <br />
</div>

<div class="table-responsive">
    <table class="table table-striped table-bordered align-middle text-center">
        <thead>
            <tr class="bg-success text-white w-auto text-nowrap">
                <th>
                    @Html.DisplayNameFor(model => model.Alunos[0].Matricula).Replace("*", string.Empty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Alunos[0].Nome).Replace("*", string.Empty)
                </th>
                <th >
                    @Html.DisplayNameFor(model => model.Alunos[0].Sexo).Replace("*", string.Empty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Alunos[0].Nascimento).Replace("*", string.Empty)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Alunos[0].Cpf).Replace("(Opcional)", string.Empty)
                </th>
                <th>
                    Opções
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var aluno in Model.Alunos)
            {
                <tr class="text-nowrap">
                    <td>
                        @Html.DisplayFor(modelItem => aluno.Matricula)
                    </td>
                    <td class="text-start">
                        @Html.DisplayFor(modelItem => aluno.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => aluno.Sexo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => aluno.Nascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => aluno.Cpf)
                    </td>
                    <td class="d-grid gap-2 d-xl-block text-nowrap">
                        <a class="btn btn-sm btn-outline-secondary " asp-action="Editar" asp-route-id="@aluno.Matricula">&#9999 Editar</a>
                        <a class="btn btn-sm btn-outline-danger" asp-action="Remover" asp-route-id="@aluno.Matricula">&#x1F5D1 Remover</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>