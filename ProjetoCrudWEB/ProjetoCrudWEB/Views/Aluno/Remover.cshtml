@model ProjetoCrudWEB.Models.Aluno

@{
    ViewData["Title"] = "Remover";
}

<h1 class="mt-5 pt-4">Remover</h1>

<h3>Tem certeza que deseja remover esse aluno?</h3>
<div>
    <h4>Aluno</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula).Replace("*", string.Empty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome).Replace("*", string.Empty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Sexo).Replace("*", string.Empty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Sexo)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nascimento).Replace("*", string.Empty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nascimento)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cpf).Replace("(Opcional)", string.Empty)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cpf)
        </dd>
    </dl>

    <form asp-action="Remover">
        <input type="hidden" asp-for="Matricula" />
        <input type="submit" value="&#x1F5D1 Remover" class="btn btn-sm btn-danger" />
    </form>

    <div>
        <br />
        <a class="btn btn-sm btn-secondary" asp-action="Index">&#x21A9 Voltar para tabela</a>
    </div>
</div>
